<div class='led_container'>
  <div class='led_switchs'>
    <% PinService.new.pins.each do |pin| %>
      <div class='led_switch'>
        <%= form_tag("/admin", method: "post") do %>
          <input name="pin_code" type="hidden" value="<%= pin[:pin] %>" />
          <input class="button <%= pin[:state] ? 'btn-off' : 'btn-on' %>" type="submit" value="<%= "LED: #{pin[:output]}" %>">
        <% end %>
      </div>
    <% end %>
  </div>

  <%= form_tag("/admin", method: "post") do %>
    <input name="pin_code" type="hidden" value="0000" />
    <input class="button" type="submit" value="Reset arduino">
  <% end %>
</div>
